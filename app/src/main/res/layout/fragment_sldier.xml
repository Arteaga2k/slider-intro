<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="@dimen/material_screen_vertical_padding"
    android:paddingBottom="@dimen/material_screen_vertical_padding"
    android:paddingEnd="@dimen/material_screen_horizontal_padding"
    android:paddingStart="@dimen/material_screen_horizontal_padding"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/ivIntroIcon"
        android:layout_width="@dimen/icon"
        android:layout_height="@dimen/icon"
        android:contentDescription="@string/icon_description"
        android:layout_above="@+id/centerAnchor"
        />
    <View
        android:layout_marginTop="@dimen/material_sections_vertical_padding"
        android:layout_marginBottom="@dimen/material_sections_vertical_padding"
        android:layout_centerInParent="true"
        android:id="@+id/centerAnchor"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/centerAnchor"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvIntroTitle"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/material_text_title"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/material_content_vertical_padding"
            />
        <TextView
            android:id="@+id/tvIntroBody"
            android:gravity="center"
            android:textSize="@dimen/material_text_sub_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

</RelativeLayout>